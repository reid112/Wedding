<%- include("authHeader") -%>

<div class="main-container">

	<section>
		<div class="container">
      <div class="row">
        <p class="bold col-sm-12">
          Attending:
        </p>
      </div>
			<div class="row">
				<ol class="col-sm-12">
          <% attending.forEach(function(rsvp) { %>
            <li><%= rsvp.name %> | <%= rsvp.numberAttending %> | <%= rsvp.notes %> | <%= rsvp.guid %></li>
          <% }); %>
        </ol>
			</div>

      <br/><br/>

      <div class="row">
        <p class="bold col-sm-12">
          Not Attending:
        </p>
      </div>
      <div class="row">
				<ol class="col-sm-12">
          <% notAttending.forEach(function(rsvp) { %>
            <li><%= rsvp.name %></li>
          <% }); %>
        </ol>
			</div>
		</div>
	</section>

<%- include("footer") -%>
