	<a id="rsvp" class="in-page-link"></a>

	<section class="rsvp rsvp-2">
		<div class="container">
			<div class="row">
				<div class="col-sm-12 text-center">
					<h1><%= names %></h1>
					<p>
						Please let us know if you can make it by<br> September 10th at the latest!
					</p>
				</div>
			</div>

			<div class="row">
				<div class="col-sm-12 text-center">
					<div class="form-wrapper">
						<form id="formRsvp" class="form-email">

								<input type="hidden" name="guid" value="<%= guid %>" />

								<input type="text" name="name" class="validate-required" placeholder="Name" value="<% if (locals.rsvp && locals.rsvp.name) { %> <%= locals.rsvp.name %> <% } %>">

								<input type="email" name="email" class="validate-email" placeholder="Email" value="<% if (locals.rsvp && locals.rsvp.email) { %> <%= locals.rsvp.email %> <% } %>">

								<div class="radio-group">
									<div class="radio-holder btn <% if (locals.rsvp && locals.rsvp.attending) { %> checked <% } %>">
										<span>Will be there!</span>
										<input type="radio" name="rsvp" value="attending" checked="checked">
									</div>
									<div class="radio-holder btn <% if (locals.rsvp && !locals.rsvp.attending) { %> checked <% } %>">
										<span>Can't make it</span>
										<input type="radio" name="rsvp" value="not-attending">
									</div>
								</div>

								<hr />

								<label class="number-attending-label">How many attending?</label>
								<select class="form-control number-attending" name="numberAttending">
									<% for (var i = 0; i <= number; i++) { %>
										<option value="<%= i %>" <% if (locals.rsvp && locals.rsvp.numberAttending === i) { %> selected <% } %>><%= i %></option>
									<% } %>
								</select>

								<input type="text" name="names" class="names validate-required-attending" placeholder="Who will be attending?" value="<% if (locals.rsvp && locals.rsvp.names) { %> <%= locals.rsvp.names %> <% } %>">

								<input type="text" name="notes" placeholder="Any notes, song requests, etc?" value="<% if (locals.rsvp && locals.rsvp.notes) { %> <%= locals.rsvp.notes %> <% } %>">

							<input type="submit" value="RSVP">
							<div class="form-error">
								<span>Please fill out all fields</span>
							</div>
							<div class="form-success">
								<span>Thanks for your RSVP!</span>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</section>

